# =================================================================
# Duramation Environment Variables
#
# This file serves as an example for the .env file
# located at the root of your project.
#
# IMPORTANT: Never commit your actual .env file to version control.
# Create a copy of this file, rename it to .env, and fill in
# your sensitive credentials and configuration values.
# =================================================================


# -----------------------------------------------------------------
# General Application Configuration
# -----------------------------------------------------------------
NODE_ENV="development"
NEXT_RUNTIME="nodejs"
FRONTEND_URL="http://localhost:3000"
NEXT_BACKEND_API_URL="http://localhost:3001/api/inngest"
INTERNAL_API_SECRET="your_internal_api_secret_here" # A strong, unique secret key


# -----------------------------------------------------------------
# Authentication Configuration (Clerk)
# Read more: https://clerk.com/docs
# -----------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard/overview"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard/overview"
CLERK_WEBHOOK_SIGNING_SECRET="whsec_your_clerk_webhook_signing_secret"


# -----------------------------------------------------------------
# Workflow Engine (Inngest)
# Read more: https://www.inngest.com/docs
# -----------------------------------------------------------------
INNGEST_SIGNING_KEY="your_inngest_signing_key"
INNGEST_EVENT_KEY="your_inngest_event_key"
INNGEST_DEV="true" # Set to "true" for local development with Inngest Dev Server
INNGEST_WEBHOOK_SECRET="your_inngest_webhook_secret"
INNGEST_APP_URL="http://localhost:3001"


# -----------------------------------------------------------------
# Third-Party Integrations (Nango)
# Read more: https://www.nango.dev/docs
# -----------------------------------------------------------------
NANGO_SECRET_KEY="your_nango_secret_key"


# -----------------------------------------------------------------
# External API Keys (if applicable)
# -----------------------------------------------------------------
GOOGLE_API_KEY="your_google_api_key"
GEMINI_API_KEY="your_gemini_api_key"


# -----------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------

# Google OAuth
# Read more: https://developers.google.com/identity/protocols/oauth2
GOOGLE_OAUTH_CLIENT_ID="your_google_oauth_client_id"
GOOGLE_OAUTH_CLIENT_SECRET="your_google_oauth_client_secret"
GOOGLE_OAUTH_REDIRECT_URL="http://localhost:3000/api/auth/callback/google" # Adjust as necessary

# Slack OAuth
# Read more: https://api.slack.com/authentication/oauth-v2
SLACK_CLIENT_ID="your_slack_client_id"
SLACK_CLIENT_SECRET="your_slack_client_secret"
SLACK_REDIRECT_URL="http://localhost:3000/api/auth/callback/slack" # Adjust as necessary

# Microsoft OAuth
# Read more: https://learn.microsoft.com/en-us/azure/active-directory/develop/v2-oauth2-auth-code-flow
MICROSOFT_OAUTH_CLIENT_ID="your_microsoft_oauth_client_id"
MICROSOFT_OAUTH_CLIENT_SECRET="your_microsoft_oauth_client_secret"
MICROSOFT_OAUTH_REDIRECT_URL="http://localhost:3000/api/auth/callback/microsoft" # Adjust as necessary


# -----------------------------------------------------------------
# Database Configuration
# Supports PostgreSQL and Redis (KV Store).
# -----------------------------------------------------------------

# PostgreSQL (Primary Database)
# Read more: https://www.postgresql.org/docs/current/libpq-connect.html
POSTGRES_URL="postgresql://user:password@host:port/database"
PRISMA_DATABASE_URL="${POSTGRES_URL}" # Used by Prisma
DATABASE_URL="${POSTGRES_URL}" # Generic alias
POSTGRES_PRISMA_URL="${POSTGRES_URL}" # Specific for some Prisma deployments
POSTGRES_URL_NON_POOLING="${POSTGRES_URL}" # For non-pooled connections, if needed

# Redis (KV Store / Upstash)
# Read more: https://upstash.com/docs/redis
KV_URL="redis://your_redis_host:port"
KV_REST_API_URL="https://your_upstash_redis_rest_url"
KV_REST_API_TOKEN="your_upstash_redis_rest_token"
REDIS_URL="${KV_URL}" # Generic alias
UPSTASH_REDIS_REST_URL="${KV_REST_API_URL}" # Alias
UPSTASH_REDIS_REST_TOKEN="${KV_REST_API_TOKEN}" # Alias


# -----------------------------------------------------------------
# Encryption
# Used for securing sensitive data.
# Generate strong, random keys for these.
# -----------------------------------------------------------------
ENCRYPTION_SECRET_KEY="your_32_char_encryption_secret_key" # 32-character key recommended
PRISMA_FIELD_ENCRYPTION_KEY="your_32_char_prisma_encryption_key" # 32-character key recommended


# -----------------------------------------------------------------
# Cloudflare R2 Storage (Optional)
# Read more: https://developers.cloudflare.com/r2/
# -----------------------------------------------------------------
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"
CLOUDFLARE_ENDPOINT_URL="https://your_cloudflare_r2_endpoint.cloudflarestorage.com"
CLOUDFLARE_ACCESS_KEY_ID="your_cloudflare_access_key_id"
CLOUDFLARE_SECRET_ACCESS_KEY="your_cloudflare_secret_access_key"
CLOUDFLARE_BUCKET_NAME="your_cloudflare_r2_bucket_name"


# -----------------------------------------------------------------
# Monitoring & Analytics (Sentry, Build Analysis)
# Read more: https://sentry.io/docs/platforms/javascript/guides/nextjs/
# -----------------------------------------------------------------
ANALYZE="false" # Set to "true" to enable Next.js build analysis
NEXT_PUBLIC_SENTRY_DSN="https://your_sentry_dsn"
NEXT_PUBLIC_SENTRY_ORG="your_sentry_organization_slug"
NEXT_PUBLIC_SENTRY_PROJECT="your_sentry_project_slug"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
NEXT_PUBLIC_SENTRY_DISABLED="false" # Set to "true" to disable Sentry in development
