{
  "name": "duramation",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter='!./apps/*'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
